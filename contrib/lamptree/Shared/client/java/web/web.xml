<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>perfSONAR Servlet Interface</display-name>
    <description>
      PerfSONAR servlet interface
    </description>

    <!-- Servlets in webapp -->

    <servlet>
        <servlet-name>XMLTopology</servlet-name>
        <servlet-class>edu.internet2.perfsonar.servlets.XMLTopologyServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>XMLTopology</servlet-name>
        <url-pattern>/ts/XMLTopology</url-pattern>
    </servlet-mapping>
</web-app>

